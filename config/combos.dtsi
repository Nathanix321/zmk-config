/*                KEY POSITIONS

  ╭─────────────────────╮ ╭─────────────────────╮
  │ LT4 LT3 LT2 LT1 LT0 │ │ RT0 RT1 RT2 RT3 RT4 │
  │ LM4 LM3 LM2 LM1 LM0 │ │ RM0 RM1 RM2 RM3 RM4 │
  │ LB4 LB3 LB2 LB1 LB0 │ │ RB0 RB1 RB2 RB3 RB4 │
  ╰───────╮ LH2 LH1 LH0 │ │ RH0 RH1 RH2 ╭───────╯
          ╰─────────────╯ ╰─────────────╯ */

#define COMBO_TERM_FAST 18
#define COMBO_TERM_SLOW 30

#define COMBO_IDLE_FAST 150
#define COMBO_IDLE_SLOW 50

/* Horizontal combos - right hand */
ZMK_COMBO(mouse,  &smart_mouse, RB1 RB3, BASE NUM NAV SYM ACC, COMBO_TERM_FAST, COMBO_IDLE_FAST)

/* Vertical combos - left hand */
ZMK_COMBO(enter_l, &kp ENTER, LT2 LM2, BASE NUM NAV MOUSE SYM ACC, COMBO_TERM_SLOW, COMBO_IDLE_SLOW)
ZMK_COMBO(tab_l,   &kp TAB,   LT1 LM1, BASE NUM NAV MOUSE SYM ACC, COMBO_TERM_SLOW, COMBO_IDLE_SLOW)
ZMK_COMBO(del_l,   &kp DEL,   LM2 LB2, BASE NUM NAV MOUSE SYM ACC, COMBO_TERM_SLOW, COMBO_IDLE_SLOW)
ZMK_COMBO(esc_l,   &kp ESC,   LM1 LB1, BASE NUM NAV MOUSE SYM ACC, COMBO_TERM_SLOW, COMBO_IDLE_SLOW)

/* Vertical combos - right hand */
ZMK_COMBO(tab_l,   &kp TAB,   RT1 RM1, BASE NUM NAV MOUSE SYM ACC, COMBO_TERM_SLOW, COMBO_IDLE_SLOW)
ZMK_COMBO(enter_l, &kp ENTER, RT2 RM2, BASE NUM NAV MOUSE SYM ACC, COMBO_TERM_SLOW, COMBO_IDLE_SLOW)
ZMK_COMBO(esc_l,   &kp ESC,   RM1 RB1, BASE NUM NAV MOUSE SYM ACC, COMBO_TERM_SLOW, COMBO_IDLE_SLOW)
ZMK_COMBO(del_l,   &kp DEL,   RM2 RB2, BASE NUM NAV MOUSE SYM ACC, COMBO_TERM_SLOW, COMBO_IDLE_SLOW)

// Combos overlapping HRMs are set up as hold-taps themselves to allow for instantaneous
